-- FUN√á√ïES DO MOD

-- Fun√ß√£o para matar Mobs
local function killMob(mobName)
    for i, v in pairs(game:GetService("Workspace"):GetDescendants()) do
        if v:IsA("Model") and v.Name:lower():match(mobName:lower()) then
            if v:FindFirstChild("Humanoid") then
                v.Humanoid.Health = 0
            end
        end
    end
end

-- Configura√ß√£o dos bot√µes de matar mobs
