MinimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    MainContentFrame.Visible = not isMinimized
    if isMinimized then
        MainFrame.Size = UDim2.new(0, 300, 0, 30)
    else
        MainFrame.Size = UDim2.new(0, 300, 0, 400)
    end
end)


