-- Fun√ß√£o de teleporte para o clique do mouse
local mouse = game.Players.LocalPlayer:GetMouse()
local teleportOnClickEnabled = false

TeleportOnClickButton.Parent = MainContentFrame
TeleportOnClickButton.Name = "TeleportOnClickButton"
TeleportOnClickButton.Text = "Teleporte com Clique (Desativado)"
TeleportOnClickButton.Position = UDim2.new(0.1, 0, 0.65, 0)
TeleportOnClickButton.Size = UDim2.new(0.8, 0, 0, 30)
-- Estilos
TeleportOnClickButton.BackgroundColor3 = Color3.fromRGB(55, 55, 65)
TeleportOnClickButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TeleportOnClickButton.Font = Enum.Font.SourceSans
TeleportOnClickButton.MouseButton1Click:Connect(function()
    teleportOnClickEnabled = not teleportOnClickEnabled
    if teleportOnClickEnabled then
        TeleportOnClickButton.Text = "Teleporte com Clique (Ativado)"
        TeleportOnClickButton.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        TeleportOnClickButton.Text = "Teleporte com Clique (Desativado)"
        TeleportOnClickButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    end
end)

mouse.Button1Down:Connect(function()
    if teleportOnClickEnabled then
        local targetPosition = mouse.Hit.p
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(targetPosition)
    end
end)


-- Exemplo de bot√£o para localiza√ß√µes pr√©-definidas
