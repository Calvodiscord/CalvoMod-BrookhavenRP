TeleportSafeZoneButton.MouseButton1Click:Connect(function()
    -- ATEN√á√ÉO: Substitua X, Y, Z pelas coordenadas desejadas
    local safeZoneCoords = Vector3.new(X, Y, Z) 
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(safeZoneCoords)
