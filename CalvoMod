--======= FUNCIONALIDADES (LÓGICA) =======--

-- --- Funcionalidade de Arraste do Painel ---
local dragging = false
local dragInput, dragStart, startPos
panelHeader.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = modPanel.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        if dragging then
            local delta = input.Position - dragStart
            modPanel.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end
end)

-- --- Funcionalidade de Navegação do Menu ---
local function switchTab(targetId)
    for _, contentFrame in pairs(contentArea:GetChildren()) do
        if contentFrame:IsA("Frame") then
            contentFrame.Visible = (contentFrame.Name == targetId)
        end
    end
    for _, mb in ipairs(menuButtons) do
        local isSelected = (mb.target == targetId)
        mb.indicator.Visible = isSelected
        mb.button.BackgroundTransparency = isSelected and 0.8 or 1
    end
end

for _, mb in ipairs(menuButtons) do
    mb.button.MouseButton1Click:Connect(function()
        switchTab(mb.target)
    end)
end

-- --- Funcionalidade dos Botões de Controle ---
closeButton.MouseButton1Click:Connect(function()
    modPanel.Visible = false
end)

minimizeButton.MouseButton1Click:Connect(function()
    modPanel.Visible = false
    minimizedPanel.Visible = true
end)

minimizedPanel.MouseButton1Click:Connect(function()
    modPanel.Visible = true
    minimizedPanel.Visible = false
end)

-- --- Funcionalidade da Lista de Jogadores ---
local function renderPlayerList()
    -- Limpa a lista antiga
    playerListContainer:ClearAllChildren()
    Instance.new("UIListLayout", playerListContainer).Padding = UDim.new(0, 4) -- Recria o layout

    local allPlayers = Players:GetPlayers()
    if #allPlayers == 0 then
        local noPlayersLabel = Instance.new("TextLabel")
        noPlayersLabel.Text = "Nenhum jogador encontrado."
        noPlayersLabel.Size = UDim2.new(1, 0, 0, 30)
        noPlayersLabel.Font = Enum.Font.SourceSansItalic
        noPlayersLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
        noPlayersLabel.BackgroundTransparency = 1
        noPlayersLabel.Parent = playerListContainer
        return
    end

    for _, player in ipairs(allPlayers) do
        local playerFrame = Instance.new("Frame")
        playerFrame.Name = player.Name
        playerFrame.Size = UDim2.new(1, 0, 0, 40)
        playerFrame.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
        playerFrame.BackgroundTransparency = 0.5
        playerFrame.Parent = playerListContainer
        Instance.new("UICorner", playerFrame).CornerRadius = UDim.new(0, 6)

        local layout = Instance.new("UIListLayout")
        layout.FillDirection = Enum.FillDirection.Horizontal
        layout.VerticalAlignment = Enum.VerticalAlignment.Center
        layout.Padding = UDim.new(0, 10)
        layout.Parent = playerFrame

        local padding = Instance.new("UIPadding")
        padding.PaddingLeft = UDim.new(0, 10)
        padding.PaddingRight = UDim.new(0, 10)
        padding.Parent = playerFrame

        local playerNameLabel = Instance.new("TextLabel")
        playerNameLabel.Text = player.DisplayName
        playerNameLabel.Font = Enum.Font.SourceSans
        playerNameLabel.TextSize = 14
        playerNameLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
        playerNameLabel.BackgroundTransparency = 1
        playerNameLabel.TextXAlignment = Enum.TextXAlignment.Left
        playerNameLabel.Size = UDim2.new(1, -80, 1, 0) -- Deixa espaço para o botão
        playerNameLabel.Parent = playerFrame

        local actionButton = Instance.new("TextButton")
        actionButton.Text = "Ação"
        actionButton.Font = Enum.Font.SourceSansBold
        actionButton.TextSize = 12
        actionButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        actionButton.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
        actionButton.Size = UDim2.new(0, 60, 0, 24)
        actionButton.Parent = playerFrame
        Instance.new("UICorner", actionButton).CornerRadius = UDim.new(0, 4)

        actionButton.MouseButton1Click:Connect(function()
            print("Ação ativada para o jogador: " .. player.Name)
        end)
    end
end

updatePlayersButton.MouseButton1Click:Connect(function()
    print("Atualizando lista de jogadores...")
    renderPlayerList()
    print("Lista de jogadores atualizada.")
end)

--======= INICIALIZAÇÃO =======--

-- Adiciona o ScreenGui à interface do jogador
screenGui.Parent = playerGui

-- Seleciona a primeira aba por padrão
switchTab("main-content")
print("Painel CALVO MOD carregado com sucesso.")