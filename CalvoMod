local localPlayer = Players.LocalPlayer
local playerGui = localPlayer:WaitForChild("PlayerGui")

-- Estado das funcionalidades (semelhante ao featureStates em JS)
local featureStates = {
    teleport = false,
    godmode = false,

    fly = false,
    noclip = false,
}

