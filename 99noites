--======= CONFIGURAÇÃO =======--
-- ID CORRIGIDO para o jogo "99+ Noites na Floresta" do link fornecido.
local GAME_ID = 7954620862
local VALID_KEYS = {
    ["8X4-N7Z-K2P-QW9"] = true,
    ["J6F-R3V-T8C-Y1M"] = true,
    ["B5H-L9S-A4G-E7D"] = true,
    ["P2W-K8N-U5X-F3Z"] = true,
    ["V9C-M1R-G6T-H4B"] = true
}

--======= SERVIÇOS E VARIÁVEIS GLOBAIS =======--
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")

local localPlayer = Players.LocalPlayer
local playerGui = localPlayer:WaitForChild("PlayerGui")
local camera = workspace.CurrentCamera

local espElements = {}
local espConnection = nil
local originalFogEnd = Lighting.FogEnd
local originalAmbient = Lighting.Ambient
local originalOutdoorAmbient = Lighting.OutdoorAmbient

--======= LÓGICA DAS FUNCIONALIDADES =======--
local function getCharacter()
    return localPlayer.Character
end

local function setInfiniteStamina(enabled)
    if getCharacter() then
        local stamina = getCharacter():FindFirstChild("Stamina")
        if stamina then
            stamina.Disabled = enabled
        end
    end
end

local function setInfiniteBattery(enabled)
    pcall(function()
        local flashlight = localPlayer.Backpack:FindFirstChild("Flashlight") or (getCharacter() and getCharacter():FindFirstChild("Flashlight"))
        if flashlight then
            local script = flashlight:WaitForChild("Handle"):FindFirstChild("LightScript")
            if script then
                script.Disabled = enabled
            end
        end
    end)
end

local function setGodMode(enabled)
    if getCharacter() and getCharacter():FindFirstChild("Humanoid") then
        getCharacter().Humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, not enabled)
    end
end

local function setWalkSpeed(speed)
    if getCharacter() and getCharacter():FindFirstChild("Humanoid") then
        getCharacter().Humanoid.WalkSpeed = speed
    end
end

local function setRemoveFog(enabled)
    if enabled then
        Lighting.FogEnd = 100000
        Lighting.Ambient = Color3.fromRGB(128, 128, 128)
        Lighting.OutdoorAmbient = Color3.fromRGB(128, 128, 128)
    else
        Lighting.FogEnd = originalFogEnd
        Lighting.Ambient = originalAmbient
        Lighting.OutdoorAmbient = originalOutdoorAmbient
    end
end

local function setESP(enabled)
    if enabled then
        if not espConnection then
            espConnection = RunService.RenderStepped:Connect(function()
                local entities = {}
                local monstersFolder = workspace:FindFirstChild("Monsters")
                
                -- Monstros
                if monstersFolder then
                    for _, monster in ipairs(monstersFolder:GetDescendants()) do
                        if monster:IsA("Model") and monster:FindFirstChild("HumanoidRootPart") then
                             table.insert(entities, {obj = monster, name = monster.Name, color = Color3.fromRGB(255, 50, 50)})
                        end
                    end
                end

                -- Baterias e Itens
                local itemsFolder = workspace:FindFirstChild("Items")
                if itemsFolder then
                    for _, item in ipairs(itemsFolder:GetChildren()) do
                        if item.Name == "Battery" and item:FindFirstChild("Handle") then
                            table.insert(entities, {obj = item, name = "Bateria", color = Color3.fromRGB(255, 255, 0)})
                        end
                    end
                end

                local existingEntities = {}
                for _, entityData in ipairs(entities) do
                    local obj = entityData.obj
                    local primaryPart = obj:FindFirstChild("HumanoidRootPart") or obj:FindFirstChild("Handle")
                    if primaryPart then
                        existingEntities[obj] = true
                        local esp = espElements[obj]
                        if not esp then
                            esp = Instance.new("BillboardGui")
                            esp.Name = "ESP_GUI"
                            esp.Adornee = primaryPart
                            esp.Size = UDim2.new(0, 200, 0, 50)
                            esp.AlwaysOnTop = true
                            esp.LightInfluence = 0
                            esp.ResetOnSpawn = false

                            local label = Instance.new("TextLabel")
                            label.Size = UDim2.new(1, 0, 1, 0)
                            label.Text = entityData.name
                            label.Font = Enum.Font.SourceSansBold
                            label.TextSize = 16
                            label.TextColor3 = entityData.color
                            label.TextStrokeTransparency = 0
                            label.BackgroundTransparency = 1
                            label.Parent = esp
                            
                            esp.Parent = playerGui
                            espElements[obj] = esp
                        end
                        -- Atualizar distância
                        local distance = math.floor((camera.CFrame.Position - primaryPart.Position).Magnitude)
                        esp.TextLabel.Text = entityData.name .. " [" .. distance .. "m]"
                    end
                end

                for obj, esp in pairs(espElements) do
                    if not existingEntities[obj] then
                        esp:Destroy()
                        espElements[obj] = nil
                    end
                end
            end)
        end
    else
        if espConnection then
            espConnection:Disconnect()
            espConnection = nil
        end
        for _, esp in pairs(espElements) do esp:Destroy() end
        espElements = {}
    end
end

local function giveTeleportTool()
    if localPlayer.Backpack:FindFirstChild("Teleportador") or (getCharacter() and getCharacter():FindFirstChild("Teleportador")) then return end

    local tool = Instance.new("Tool")
    tool.Name = "Teleportador"
    tool.ToolTip = "Clique para teleportar"
    tool.CanBeDropped = false
    tool.RequiresHandle = false

    tool.Activated:Connect(function()
        local mouse = localPlayer:GetMouse()
        if mouse.Target and getCharacter() then
            local rootPart = getCharacter():FindFirstChild("HumanoidRootPart")
            if rootPart then
                rootPart.CFrame = CFrame.new(mouse.Hit.p + Vector3.new(0, 3, 0))
            end
        end
    end)
    tool.Parent = localPlayer.Backpack
end


--======= CRIAÇÃO DA INTERFACE (GUI) =======--
local function createMainPanel()
    local screenGui = Instance.new("ScreenGui"); screenGui.Name = "FuturisticUI"; screenGui.ResetOnSpawn = false; screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling; screenGui.Parent = playerGui;

    local modPanel = Instance.new("Frame"); modPanel.Name = "ModPanel"; modPanel.Size = UDim2.new(0, 320, 0, 400); modPanel.Position = UDim2.new(0.5, 0, 0.5, 0); modPanel.AnchorPoint = Vector2.new(0.5, 0.5); modPanel.BackgroundColor3 = Color3.fromRGB(20, 22, 28); modPanel.BackgroundTransparency = 0.2; modPanel.ClipsDescendants = true; modPanel.Parent = screenGui;
    local corner = Instance.new("UICorner", modPanel); corner.CornerRadius = UDim.new(0, 8)
    local stroke = Instance.new("UIStroke", modPanel); stroke.Color = Color3.fromRGB(0, 255, 255); stroke.Transparency = 0.5; stroke.Thickness = 1.5;
    local gradient = Instance.new("UIGradient"); gradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 22, 28)), ColorSequenceKeypoint.new(1, Color3.fromRGB(30, 32, 40))}; gradient.Rotation = 90; gradient.Parent = modPanel

    local header = Instance.new("Frame"); header.Name = "Header"; header.Size = UDim2.new(1, 0, 0, 35); header.BackgroundColor3 = Color3.fromRGB(255, 255, 255); header.BackgroundTransparency = 0.95; header.Parent = modPanel;
    local headerLayout = Instance.new("UIListLayout"); headerLayout.FillDirection = Enum.FillDirection.Horizontal; headerLayout.VerticalAlignment = Enum.VerticalAlignment.Center; headerLayout.HorizontalAlignment = Enum.HorizontalAlignment.Right; headerLayout.Padding = UDim.new(0, 10); headerLayout.Parent = header;
    Instance.new("UIPadding", header).PaddingRight = UDim.new(0, 5)
    local title = Instance.new("TextLabel"); title.Name = "Title"; title.Size = UDim2.new(1, -70, 1, 0); title.Text = "  99 FLORESTA"; title.Font = Enum.Font.Michroma; title.TextSize = 14; title.TextColor3 = Color3.fromRGB(0, 255, 255); title.BackgroundTransparency = 1; title.TextXAlignment = Enum.TextXAlignment.Left; title.Parent = header;
    local minimizeButton = Instance.new("TextButton"); minimizeButton.Name = "Minimize"; minimizeButton.Size = UDim2.new(0, 20, 0, 20); minimizeButton.Text = "—"; minimizeButton.Font = Enum.Font.SourceSansBold; minimizeButton.TextSize = 16; minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 100); minimizeButton.BackgroundTransparency = 1; minimizeButton.Parent = header;
    local closeButton = Instance.new("TextButton"); closeButton.Name = "Close"; closeButton.Size = UDim2.new(0, 20, 0, 20); closeButton.Text = "X"; closeButton.Font = Enum.Font.SourceSansBold; closeButton.TextSize = 16; closeButton.TextColor3 = Color3.fromRGB(255, 100, 100); closeButton.BackgroundTransparency = 1; closeButton.Parent = header;

    local contentFrame = Instance.new("ScrollingFrame"); contentFrame.Name = "Content"; contentFrame.Size = UDim2.new(1, -20, 1, -45); contentFrame.Position = UDim2.new(0.5, 0, 0, 40); contentFrame.AnchorPoint = Vector2.new(0.5, 0); contentFrame.BackgroundTransparency = 1; contentFrame.BorderSizePixel = 0; contentFrame.ScrollBarThickness = 4; contentFrame.ScrollBarImageColor3 = Color3.fromRGB(0, 255, 255); contentFrame.Parent = modPanel;
    local contentLayout = Instance.new("UIListLayout"); contentLayout.Padding = UDim.new(0, 8); contentLayout.Parent = contentFrame;

    local minimizedPanel = Instance.new("TextButton"); minimizedPanel.Name = "Minimized"; minimizedPanel.Size = UDim2.new(0, 120, 0, 30); minimizedPanel.Position = UDim2.new(1, -130, 1, -40); minimizedPanel.Text = "99 MOD"; minimizedPanel.Font = Enum.Font.Michroma; minimizedPanel.TextSize = 12; minimizedPanel.TextColor3 = Color3.fromRGB(0, 255, 255); minimizedPanel.BackgroundColor3 = Color3.fromRGB(20, 22, 28); minimizedPanel.BackgroundTransparency = 0.2; minimizedPanel.Visible = false; minimizedPanel.Parent = screenGui; Instance.new("UICorner", minimizedPanel).CornerRadius = UDim.new(0, 6); Instance.new("UIStroke", minimizedPanel).Color = Color3.fromRGB(0, 255, 255);

    -- Funções para criar elementos
    local function createToggle(p, t, c) local f=Instance.new("Frame");f.Size=UDim2.new(1,0,0,35);f.BackgroundColor3=Color3.fromRGB(255,255,255);f.BackgroundTransparency=0.9;f.Parent=p;Instance.new("UICorner",f).CornerRadius=UDim.new(0,6);local l=Instance.new("UIListLayout");l.FillDirection=Enum.FillDirection.Horizontal;l.VerticalAlignment=Enum.VerticalAlignment.Center;l.HorizontalAlignment=Enum.HorizontalAlignment.Right;l.Padding=UDim.new(0,12);l.Parent=f;local lbl=Instance.new("TextLabel");lbl.Text=t;lbl.Font=Enum.Font.SourceSans;lbl.TextSize=14;lbl.TextColor3=Color3.fromRGB(220,220,220);lbl.BackgroundTransparency=1;lbl.TextXAlignment=Enum.TextXAlignment.Left;lbl.Size=UDim2.new(1,-70,1,0);lbl.Parent=f;Instance.new("UIPadding",lbl).PaddingLeft=UDim.new(0,12);local b=Instance.new("TextButton");b.Size=UDim2.new(0,40,0,20);b.Text="";b.BackgroundColor3=Color3.fromRGB(255,80,80);b.Parent=f;Instance.new("UICorner",b).CornerRadius=UDim.new(1,0);local h=Instance.new("Frame");h.Size=UDim2.new(0,16,0,16);h.Position=UDim2.new(0,2,0.5,0);h.AnchorPoint=Vector2.new(0,0.5);h.BackgroundColor3=Color3.fromRGB(255,255,255);h.Parent=b;Instance.new("UICorner",h).CornerRadius=UDim.new(1,0);local e=false;b.MouseButton1Click:Connect(function()e=not e;local cl=e and Color3.fromRGB(80,255,80)or Color3.fromRGB(255,80,80);local ps=e and UDim2.new(1,-18,0.5,0)or UDim2.new(0,2,0.5,0);TweenService:Create(b,TweenInfo.new(0.2),{BackgroundColor3=cl}):Play();TweenService:Create(h,TweenInfo.new(0.2,Enum.EasingStyle.Quad),{Position=ps}):Play();c(e)end) end
    local function createButton(p, t, c) local b=Instance.new("TextButton");b.Size=UDim2.new(1,0,0,35);b.Text=t;b.Font=Enum.Font.SourceSansBold;b.TextSize=14;b.TextColor3=Color3.fromRGB(220,220,220);b.BackgroundColor3=Color3.fromRGB(0,255,255);b.BackgroundTransparency=0.8;b.Parent=p;Instance.new("UICorner",b).CornerRadius=UDim.new(0,6);b.MouseButton1Click:Connect(c) end
    
    -- Adicionar opções ao painel
    createToggle(contentFrame, "ESP (Monstros/Itens)", setESP)
    createToggle(contentFrame, "Bateria Infinita", setInfiniteBattery)
    createToggle(contentFrame, "Estamina Infinita", setInfiniteStamina)
    createToggle(contentFrame, "Modo Imortal", setGodMode)
    createToggle(contentFrame, "Remover Névoa", setRemoveFog)
    createButton(contentFrame, "Pegar Ferramenta de Teleporte", giveTeleportTool)
    createButton(contentFrame, "Velocidade x2 (32)", function() setWalkSpeed(32) end)
    createButton(contentFrame, "Velocidade Padrão (16)", function() setWalkSpeed(16) end)

    -- Funcionalidades do painel
    local function makeDraggable(trigger,target)local d,s,p;trigger.InputBegan:Connect(function(i)if i.UserInputType==Enum.UserInputType.MouseButton1 then d,s,p=true,i.Position,target.Position;local c;c=i.Changed:Connect(function()if i.UserInputState==Enum.UserInputState.End then d=false;c:Disconnect()end end)end end);UserInputService.InputChanged:Connect(function(i)if d and i.UserInputType==Enum.UserInputType.MouseMovement then local l=i.Position-s;target.Position=UDim2.new(p.X.Scale,p.X.Offset+l.X,p.Y.Scale,p.Y.Offset+l.Y)end end)end
    makeDraggable(header, modPanel)
    closeButton.MouseButton1Click:Connect(function() screenGui:Destroy() end)
    minimizeButton.MouseButton1Click:Connect(function() modPanel.Visible = false; minimizedPanel.Visible = true end)
    minimizedPanel.MouseButton1Click:Connect(function() modPanel.Visible = true; minimizedPanel.Visible = false end)
end

--======= LÓGICA DE INICIALIZAÇÃO =======--
local function showLoginScreen()
    local loginGui = Instance.new("ScreenGui"); loginGui.Name = "LoginScreen"; loginGui.ResetOnSpawn = false; loginGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling; loginGui.Parent = playerGui;
    
    local background = Instance.new("Frame"); background.Size = UDim2.new(1,0,1,0); background.BackgroundColor3 = Color3.fromRGB(0,0,0); background.BackgroundTransparency = 0.5; background.Parent = loginGui;
    local mainFrame = Instance.new("Frame"); mainFrame.Size = UDim2.new(0, 350, 0, 180); mainFrame.Position = UDim2.new(0.5,0,0.5,0); mainFrame.AnchorPoint = Vector2.new(0.5,0.5); mainFrame.BackgroundColor3 = Color3.fromRGB(20, 22, 28); mainFrame.Parent = background; Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0,8); Instance.new("UIStroke", mainFrame).Color = Color3.fromRGB(0,255,255);
    
    local title = Instance.new("TextLabel"); title.Size = UDim2.new(1,0,0,40); title.Text = "AUTENTICAÇÃO NECESSÁRIA"; title.Font = Enum.Font.Michroma; title.TextSize = 16; title.TextColor3 = Color3.fromRGB(0,255,255); title.BackgroundTransparency = 1; title.Parent = mainFrame;
    local keyBox = Instance.new("TextBox"); keyBox.Size = UDim2.new(1,-40,0,40); keyBox.Position = UDim2.new(0.5,0,0,60); keyBox.AnchorPoint = Vector2.new(0.5,0); keyBox.Font = Enum.Font.SourceSans; keyBox.TextSize = 14; keyBox.PlaceholderText = "Insira sua chave de 12 dígitos"; keyBox.BackgroundColor3 = Color3.fromRGB(10,10,10); keyBox.TextColor3 = Color3.fromRGB(255,255,255); keyBox.Parent = mainFrame; Instance.new("UICorner", keyBox).CornerRadius = UDim.new(0,6);
    local submitButton = Instance.new("TextButton"); submitButton.Size = UDim2.new(1,-40,0,40); submitButton.Position = UDim2.new(0.5,0,0,120); submitButton.AnchorPoint = Vector2.new(0.5,0); submitButton.Text = "VALIDAR"; submitButton.Font = Enum.Font.Michroma; submitButton.TextSize = 14; submitButton.TextColor3 = Color3.fromRGB(20,22,28); submitButton.BackgroundColor3 = Color3.fromRGB(0,255,255); submitButton.Parent = mainFrame; Instance.new("UICorner", submitButton).CornerRadius = UDim.new(0,6);

    submitButton.MouseButton1Click:Connect(function()
        if VALID_KEYS[keyBox.Text:upper()] then
            loginGui:Destroy()
            createMainPanel()
        else
            submitButton.Text = "CHAVE INVÁLIDA"
            submitButton.BackgroundColor3 = Color3.fromRGB(255,50,50)
            task.wait(1.5)
            submitButton.Text = "VALIDAR"
            submitButton.BackgroundColor3 = Color3.fromRGB(0,255,255)
        end
    end)
end

local function showErrorScreen()
    local errorGui = Instance.new("ScreenGui"); errorGui.Name = "ErrorScreen"; errorGui.Parent = playerGui;
    local label = Instance.new("TextLabel"); label.Text = "ERRO: Este script é compatível apenas com '99+ Noites na Floresta'."; label.Size = UDim2.new(1,0,0,50); label.Position = UDim2.new(0.5,0,0.5,0); label.AnchorPoint = Vector2.new(0.5,0.5); label.BackgroundColor3 = Color3.fromRGB(200,0,0); label.Font = Enum.Font.SourceSansBold; label.TextSize = 20; label.TextColor3 = Color3.fromRGB(255,255,255); label.Parent = errorGui;
end

-- Iniciar
if game.PlaceId == GAME_ID then
    showLoginScreen()
else
    showErrorScreen()
end